<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.walletconvertation.common.customs.walletView.WalletViewModel"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="6dp"
        android:padding="10dp"
        android:weightSum="1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/component_wallet" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/fira_go_book"
                android:gravity="center_vertical"
                android:text="@string/wallet"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:alpha="0.5"
                android:ellipsize="end"
                android:fontFamily="@font/fira_go_book"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/account_number"
                android:textColor="@color/bold_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:fontFamily="@font/fira_go_medium"
            android:gravity="end|center_vertical"
            android:text="00.00"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:fontFamily="@font/fira_go_book"
            android:gravity="start|center_vertical"
            android:paddingStart="5dp"
            android:text="$"
            android:textColor="@color/grey"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEndIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/ic_arrow_right" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>